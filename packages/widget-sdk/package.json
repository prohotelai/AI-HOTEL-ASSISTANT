{
  "name": "@pms/widget-sdk",
  "version": "1.0.0",
  "description": "Vanilla TypeScript SDK for embedding PMS guest services in external websites",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "umd": "dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "dev": "vite"
  },
  "keywords": [
    "pms",
    "widget",
    "embedding",
    "guest-services",
    "qr-code",
    "offline"
  ],
  "author": "Hotel PMS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {}
}
