generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SessionType {
  REFRESH
  MAGIC
  RESET
}

model Hotel {
  id         String      @id @default(uuid())
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  users      User[]
  staff      Staff[]
  sessions   Session[]
  auditLogs  AuditLog[]
  userRoles  UserRole[]
}

model User {
  id           String      @id @default(uuid())
  email        String
  passwordHash String?
  hotelId      String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  hotel        Hotel       @relation(fields: [hotelId], references: [id])
  roles        UserRole[]
  sessions     Session[]
  staff        Staff?
  auditLogs    AuditLog[]

  @@unique([email])
  @@index([hotelId])
}

model Staff {
  id        String   @id @default(uuid())
  userId    String   @unique
  hotelId   String
  position  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  hotel     Hotel    @relation(fields: [hotelId], references: [id])

  @@index([hotelId])
}

model Role {
  id        String     @id @default(uuid())
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userRoles UserRole[]
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  hotelId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  role      Role     @relation(fields: [roleId], references: [id])
  hotel     Hotel    @relation(fields: [hotelId], references: [id])

  @@unique([userId, roleId, hotelId])
  @@index([hotelId])
  @@index([roleId])
}

model Session {
  id           String      @id @default(uuid())
  userId       String
  hotelId      String
  type         SessionType @default(REFRESH)
  token        String?
  refreshToken String?
  expiresAt    DateTime
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  user         User        @relation(fields: [userId], references: [id])
  hotel        Hotel       @relation(fields: [hotelId], references: [id])

  @@index([userId])
  @@index([hotelId])
  @@index([type])
  @@unique([type, token])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  hotelId   String
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  hotel     Hotel    @relation(fields: [hotelId], references: [id])

  @@index([hotelId])
  @@index([userId])
}
