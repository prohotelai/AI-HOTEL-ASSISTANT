{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "composite": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2019",
    "lib": ["DOM", "ES2020"],
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
